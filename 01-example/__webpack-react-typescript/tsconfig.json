{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}